{
  "name": "azure-devops-pr-monitor",
  "version": "1.0.0",
  "private": true,
  "description": "Chrome extension to monitor Azure DevOps pull requests and surface notifications",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run typecheck && npm run lint && npm run build && npm run test"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "latest",
    "@types/chrome": "^0.0.287",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
